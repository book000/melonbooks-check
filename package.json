{
  "name": "melonbooks-check",
  "version": "2.0.0",
  "license": "MIT",
  "author": "Tomachi <tomachi@tomacheese.com>",
  "private": true,
  "main": "index.js",
  "repository": "git@github.com:book000/melonbooks-check.git",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register ./src/main.ts",
    "dev": "ts-node-dev --poll -r tsconfig-paths/register ./src/main.ts",
    "package": "run-s clean compile packing",
    "packing": "ncc build ./dist/main.js -o output/",
    "compile": "tsc -p .",
    "clean": "rimraf dist output",
    "lint": "run-p -c lint:prettier lint:eslint lint:tsc",
    "lint:prettier": "prettier --check src",
    "lint:eslint": "eslint . --ext ts,tsx",
    "lint:tsc": "tsc",
    "fix": "run-s fix:prettier fix:eslint",
    "fix:eslint": "eslint . --ext ts,tsx --fix",
    "fix:prettier": "prettier --write src"
  },
  "devDependencies": {
    "@book000/node-utils": "1.3.13",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "5.59.9",
    "@typescript-eslint/parser": "5.59.9",
    "@vercel/ncc": "0.38.1",
    "axios": "1.4.0",
    "cheerio": "1.0.0-rc.12",
    "eslint": "8.42.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-n": "16.0.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-unicorn": "47.0.0",
    "prettier": "2.8.8",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "typescript": "5.1.3",
    "yarn-run-all": "3.1.1"
  }
}
